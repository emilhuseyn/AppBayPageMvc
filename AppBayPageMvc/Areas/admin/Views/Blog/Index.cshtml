@using AppBayPageMvc.Models
@model List<Blog>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, AuthoringTagHelpers

    <a asp-action="Create" asp-controller="Blog">
        Create
    </a>
<table class="table">
    <a>
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Description</th>
            <th scope="col">Icon</th>
            
        </tr>
    </thead>
    <tbody>
       @foreach (var item in Model)
       {
           
        <tr>
            <th scope="row"></th>
            <td>@item.Name</td>
            <td>@item.Description</td>
            <td>@item.Icon</td>
            <td>

            <a asp-action="Delete" asp-controller="Blog" asp-route-id="@item.Id"> 
            <button>Delete</button>
                </a>
            </td>
            <td>

                <a asp-action="Update" asp-controller="Blog" asp-route-id=@item.Id>
            <button>Update</button>
                </a>
            </td>
        </tr>
       }
    </tbody>
</table>
